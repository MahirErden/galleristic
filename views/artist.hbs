<p class="text-center mt-3">{{title1}}</p>



<div class="row">

  <div class="col-md-12">
    {{{msg}}}
  </div>


  <div class="col-md-12">
    <h1>Art Details</h1>
    <form action="/artist" method="POST" enctype="multipart/form-data">

      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="title" aria-describedby="title" placeholder="Enter Art Title">
      </div>

      <div class="form-group">
        <label for="price">Price</label>
        <input type="text" class="form-control" id="price" name="price" aria-describedby="price" placeholder="Enter Art Price">
      </div>

      <div class="form-group">
        <label for="year">Year</label>
        <input type="text" class="form-control" id="year" name="year" aria-describedby="year" placeholder="Enter Year">
      </div>


      <div class="form-group">
        <label for="catSelect">Category</label>
        <select class="form-control" id="catSelect" name="categoryID">
          {{#each categories}}
          <option>{{this.dataValues.name}}</option>
          {{/each}}
        </select>
      </div>
      
      <div class="form-group">
        <label for="artistSelect">Artist</label>
        <select class="form-control" id="artistSelect" name="artistID">
          {{#each artists}}
          <option>{{this.dataValues.name}}</option>
          {{/each}}
        </select>
      </div>

      <div class="form-group">
        <label for="exampleTextarea">Comments</label>
        <textarea class="form-control" id="exampleTextarea" name="comment" rows="1"></textarea>
      </div>

      <div class="file-field input-field">
        <div class="btn grey">
          <span>File</span>
          <input name="artistFile" type="file">
        </div>
        
      </div>
      <br>
      <button type="submit" class="btn btn-primary">Submit</button>
      <br>
      <br>
    </form>
  </div>

  <div class="col-md-12">

  </div>
  {{!-- end of row --}}
</div>




<div class="row">
  <div class="col-md-3">
  <p>{{{atitle}}}</p>
  <p>{{{aprice}}}</p>

  </div>

  <div class="col-md-6">

    <img src="{{file}}" style="width:600px;height:300px;">
    

  </div>

  <div class="col-md-3">

  

  </div>
  {{!-- end of row --}}
</div>