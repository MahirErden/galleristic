<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body" style="background:url(../images/abstract01.jpeg) no-repeat top center fixed;">
      <h1 class="text-center mb-3"><i class="fas fa-user-plus"></i> Artist Register</h1>
      {{!-- <form action="/register" method="POST" oninput='password2.setCustomValidity(password2.value != password.value ? "Passwords do not match." : "")'> --}}
      <form class="artist_register" oninput='artist_password2.setCustomValidity(artist_password2.value != artist_password.value ? "Passwords do not match." : "")'>
        <div class="form-group">
          <label for="name">Name</label>
          <input type="name" id="artist_name" name="name" class="form-control" placeholder="Enter Name" required>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="artist_email" name="email" class="form-control" placeholder="Enter Email" required>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" name="password" id="artist_password" class="form-control" placeholder="Create Password" required>
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input type="password" name="password2" id="artist_password2" class="form-control" placeholder="Confirm Password" required>
        </div>
        <button type="submit" class="btn btn-primary">
          Register
        </button> 
      </form>
      <p class="lead mt-4">Have An Account? <a class="text-dark" href="/artist_login">Login</a></p>
    </div>
  </div>
</div>